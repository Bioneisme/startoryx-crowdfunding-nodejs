<html>
<head>
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<div class="container mx-3">

    {{> _header}}

    <div class="row">
        <div class="col-2">
            <br>LOGIN
            <form method="POST" action="/api/login">
                Email:<br><input type="email" name="email">
                <br>Password:<br><input type="password" name="password">
                <br><br><input type="submit" value="Submit"></form>
        </div>
        <div class="col-9">
            <br>REGISTRATION
            <form method="POST" action="/api/registration">
                First Name:<br><input type="text" name="first_name">
                <br>Last Name:<br><input type="text" name="last_name">
                <br>Email:<br><input type="email" name="email">
                <br>Phone:<br><input type="text" name="phone">
                <br>Age:<br><input type="number" name="age">
                <br>Password:<br><input type="password" name="password">
                <br><br><input type="submit" value="Submit"></form>
        </div>
    </div>

    <table>
        <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th></th>
        </tr>
        </thead>
    <tbody>
        {{#each projects}}
        <tr>
            <td><a href="projects/{{_id}}">{{title}}</a></td>
            <td>{{dateCreated}} </td>
            <td>
                <a href="/projects/edit/{{_id}}">Edit page</a>
                <form action="/projects/delete/{{_id}}" method="POST" >
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit">Delete note</button>
                </form>
            </td>
        </tr>
        </tbody>
        {{/each}}
    </table>

</div>
</html>