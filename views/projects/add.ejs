<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>

    <%- include('../partials/tinymc'); %>
</head>
<body class="container mx-3">

<header>
    <%- include('../partials/header_'); %>
</header>

<main>
    <div class="container mx-3">
        <br>
        <div>
            <form action="/api/projects/add" method="POST" enctype="multipart/form-data">
                <label for="title" class="text-white"></label>
                <input type="text" class="form-control" placeholder="Title" name="title" required>

                <label for="type" class="text-white"></label>
                <input type="text" class="form-control" placeholder="Type" name="type" required>
                <br>
                <label for="image" class="text-white"></label>
                <input type="file" name="image" accept="image/*">
                <br>
                <label for="shortly" class="text-white"></label>
                <input type="text" class="form-control" placeholder="Shortly Description" name="shortly" required>

                <label for="days" class="text-white"></label>
                <input type="number" class="form-control" placeholder="Days" name="days" required>

                <label for="goal" class="text-white"></label>
                <input type="number" class="form-control" placeholder="Goal" name="goal" required>
                <br>
                <textarea id="mytextarea" name="body" value="body"></textarea>
                <br>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary"> Save</button>
                </div>
            </form>
        </div>
    </div>

</main>


</body>
</html>